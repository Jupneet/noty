<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jupneetsingh.noty">

    <application
        android:name=".NotyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.NotesListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWithoutActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AddEditNoteActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWithoutActionBar"></activity>

    </application>

</manifest>